{
        "version": "0.2.0",
        "configurations": [
            { 
                "name": "(gdb) client",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/binary/client",
                "args": ["127.0.0.1:54323","127.0.0.1:54322"], 
                "stopAtEntry": false,
                "cwd": "${workspaceRoot}",
                "environment": [],
                "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        ]
    }
